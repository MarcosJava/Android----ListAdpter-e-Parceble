<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewNome"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="75dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewNoVoo"
        android:layout_below="@+id/textViewNome"
        android:layout_alignLeft="@+id/textViewNome"
        android:layout_alignStart="@+id/textViewNome"
        android:paddingLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewDestin"
        android:layout_below="@+id/textViewNoVoo"
        android:layout_alignLeft="@+id/textViewNoVoo"
        android:layout_alignStart="@+id/textViewNoVoo"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:id="@+id/textLabelTitle"
        android:layout_above="@+id/textViewNoVoo"
        android:layout_toLeftOf="@+id/textViewNoVoo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="noVoo"
        android:id="@+id/textLabelYear"
        android:layout_alignTop="@+id/textViewNoVoo"
        android:layout_toLeftOf="@+id/textViewNoVoo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destino"
        android:id="@+id/textLabelGenre"
        android:layout_alignTop="@+id/textViewDestin"
        android:layout_toLeftOf="@+id/textViewDestin" />

</RelativeLayout>